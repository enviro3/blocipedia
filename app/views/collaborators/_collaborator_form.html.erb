<div class="container">
	<% User.all.each do |user| %>
		<div class="row">
			<div class="col">
				<h3><%= user.name %></h3>
			</div>
			<div class="col">
				<% if wiki.users.include?(user) %>
					<%= link_to "Remove Collaborator", find_collaborator(user, wiki), method: :delete, class: 'btn btn-danger' %>
				<% else %>
					<%= form_for Collaborator.new do |f| %>
						<%= f.hidden_field :user_id, value: user.id %>
						<%= f.hidden_field :wiki_id, value: wiki.id %>
						<%= f.submit 'Make Collaborator', class: "btn btn-success" %>
					<% end %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>
